@*This is a partial view for things you want to print out in a different way or only on a few pages*@

@model Books


<tr>
    <td>@Model.Title</td>
    <td>@Model.AuthorFirst</td>
    <td>@Model.AuthorLast</td>
    <td>@Model.Publisher</td>
    <td>@Model.ISBN</td>
    <td>@Model.Category</td>
    <td>@Model.Classification</td>
    <td><a>$</a>@Model.Price</td>
    <td>@Model.Pages</td>

    @*add the buy option for each book. This should take the person to the cart page!*@

    <td>
        <form id="@Model.BookId" asp-page="/Buy" method="post">
            <input type="hidden" asp-for="BookId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                <button type="submit" class="btn-success btn-sm pull-right" >Buy</button>
            </span>
        </form>
    </td>
</tr>



@*when transferring to a partial view make sure you only transfer the stuff that will be displayed!*@

