@page

@model IS_413_Assignment_5.Pages.BuyModel
@{
    ViewBag.h1 = "Welcome To Your Cart! ";
}

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>
<br />
<div class="container">
    <table class=" table table-striped table-dark">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author First</th>
                <th>Author Last</th>
                <th>Category</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
            </tr>
        </thead>
@*Use razor code to make bring in the new movies from the model.
    Also use a foreach to loop through all of the restaurants in the list and print them in a table*@

        <tbody>
           
                @foreach (var line in Model.Cart.Lines)
                {
            <tr>
                <td>@line.Books.Title</td>
                <td>@line.Books.AuthorFirst</td>
                <td>@line.Books.AuthorLast</td>
                <td>@line.Books.Category</td>
                <td>$@line.Books.Price</td>
                <td class="text-center">@line.Quantity</td>
                <td class="text-right">@((line.Quantity*line.Books.Price).ToString("c"))</td>
                <td>
                    <form asp-page-handler="Remove" method="post">
                        <input type="hidden" name="BookId" value="@line.Books.BookId" />
                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                        <span class="card-text p-1">
                            <button type="submit" class="btn-danger btn-sm pull-right">Remove</button>
                        </span>
                    </form>
                </td>
            </tr>
                }
            
        </tbody>

        <tfoot>
            <tr>
                <td colspan="6" class="text-right">Total:</td>
                <td class="text-right">@Model.Cart.ComputeTotalSum().ToString("c")</td>
            </tr>
        </tfoot>
    </table>
</div>
<br />
